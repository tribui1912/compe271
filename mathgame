#include <ncurses.h>
#include <stdlib.h>

#define NUM_EQUATIONS 3

void displayEquations(int equations[NUM_EQUATIONS], int position) {
    clear();
    printw("Welcome to MathGame!\n");
    printw("Use the left and right arrow keys to choose an equation.\n");
    printw("Press 'Enter' to select the equation.\n");

    for (int i = 0; i < NUM_EQUATIONS; i++) {
        if (i == position) {
            printw("[ %d ] ", equations[i]);
        } else {
            printw("  %d   ", equations[i]);
        }
    }
    refresh();
}

int main() {
    int equations[NUM_EQUATIONS] = {5 + 3, 7 * 2, 9 - 4};
    int position = 0;

    initscr();
    raw();
    keypad(stdscr, TRUE);
    noecho();

    displayEquations(equations, position);

    while (1) {
        int input = getch();
        if (input == KEY_LEFT) {
            position = (position - 1 + NUM_EQUATIONS) % NUM_EQUATIONS;
        } else if (input == KEY_RIGHT) {
            position = (position + 1) % NUM_EQUATIONS;
        } else if (input == 10) { // Enter key
            break;
        }
        displayEquations(equations, position);
    }

    endwin();

    printf("\nYou selected the equation: %d\n", equations[position]);

    return 0;
}
