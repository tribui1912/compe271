#include <ncurses.h>
#include <stdlib.h>
#include <time.h>

#define NUM_EQUATIONS 3
#define MAX_LEVEL 5

typedef struct {
    char equation[16];
    int answer;
} MathEquation;

void generateRandomEquation(MathEquation *equation, int max_operand) {
    int num1 = rand() % (max_operand + 1);
    int num2 = rand() % (max_operand + 1);
    char operators[] = "+-*/";
    char op = operators[rand() % 4];

    switch (op) {
        case '+':
            equation->answer = num1 + num2;
            break;
        case '-':
            equation->answer = num1 - num2;
            break;
        case '*':
            equation->answer = num1 * num2;
            break;
        case '/':
            while (num2 == 0) {
                num2 = rand() % (max_operand + 1);
            }
            equation->answer = num1 / num2;
            break;
    }

    snprintf(equation->equation, sizeof(equation->equation), "%d %c %d", num1, op, num2);
}

void displayEquations(MathEquation equations[NUM_EQUATIONS], int position, int level, int total) {
    clear();
    printw("Welcome to MathGame!\n");
    printw("Level: %d\n", level);
    printw("Total: %d\n\n", total);
    printw("Use the left and right arrow keys to choose an equation.\n");
    printw("Press 'Enter' to select the equation.\n\n");

    for (int i = 0; i < NUM_EQUATIONS; i++) {
        if (i == position) {
            printw("[ %s ] ", equations[i].equation);
        } else {
            printw("  %s   ", equations[i].equation);
        }
    }

    refresh();
}

int main() {
    srand(time(NULL));

    int level = 1;
    int total = 0;
    int enemies = (MAX_LEVEL * 2 * (MAX_LEVEL * 2)) * 2 - 1; // max total for all 5 levels minus one

    initscr();
    raw();
    keypad(stdscr, TRUE);
    noecho();

    while (level <= MAX_LEVEL) {
        MathEquation equations[NUM_EQUATIONS];
        for (int i = 0; i < NUM_EQUATIONS; i++) {
            generateRandomEquation(&equations[i], level * 2);
        }
        int position = 0;

        displayEquations(equations, position, level, total);

        while (1) {
            int input = getch();
            if (input == KEY_LEFT) {
                position = (position - 1 + NUM_EQUATIONS) % NUM_EQUATIONS;
            } else if (input == KEY_RIGHT) {
                position = (position + 1) % NUM_EQUATIONS;
            } else if (input == 10) { // Enter key
                break;
            }
            displayEquations(equations, position, level, total);
        }

        total += equations[position].answer;
        level++;
    }

    endwin();

    printf("\nYou completed all levels!\n");
    printf("Your total score is: %d\n", total);
    printf("Total number of enemies: %d\n", enemies);
    printf("Thank you for playing MathGame!\n");

    return 0;
}
